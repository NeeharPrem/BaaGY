            <div class="container mt-4">
                <h2>Product List</h2>
                <div>
                    <a href="/admin/addproduct" class="btn btn-warning m-3">Add Product</a>
                  </div>
                <div class="table-wrapper">
                    <div class="table-responsive">
                        <% if(prdts.length>0) {%>
                            <table id="userlist" class="display table table-striped table-hover" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Image</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Category</th>
                                        <th>List/Unlist</th>
                                        <th>Action</th>
                                        <th>Offer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let i = 0; i < prdts.length; i++) { %>
                                    <tr>
                                        <td><%= i + 1 %></td>
                                        <td><%= prdts[i].name %></td>
                                        <td>
                                            <div>
                                                <img src="/img/<%= prdts[i].img[0]%>"
                                                    alt="placeholder" width="60">
                                            </div>
                                        </td>
                                        <td>â‚¹ <%= prdts[i].price %></td>
                                        <td><%= prdts[i].quantity %></td>
                                        <td><%= prdts[i].category.name %></td>
                                        <td>
                                            <% if (prdts[i].status === false) { %>
                                            <!-- <a href="/admin/unlistprdt?id=<%= prdts[i]._id %>" class="btn btn-danger"
                                                >Unlist</a> -->
                                                <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Unlist</a>
                                            <% } else { %>
                                            <a href="/admin/unlistprdt?id=<%= prdts[i]._id %>" class="btn btn-success">List</a>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/admin/editproduct?id=<%= prdts[i]._id %>" class="btn btn-danger">Edit</a>
                                        </td>
                                        <td>
                                        <% if (typeof prdts[i].offer==='undefined' ) { %>
                                            <a class="btn btn-success popupBTN" data-id="<%= prdts[i]._id %>" href="#" role="button" data-toggle="modal"
                                                data-target="#cancelOrderModal">Apply</a>
                                            <% } else { %>
                                                <a class="btn btn-danger popupBTN1" data-id="<%= prdts[i]._id %>" href="#" role="button" data-toggle="modal"
                                                    data-target="#cancelOffer">Remove</a>
                                                <% } %>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                    </div>
                        <%}else{%>
                            <h1 class="text-center">No Products</h1>
                        <%}%>
                </div>
            </div>
        </div>
    </div>
    <!-- ... (other sections) ... -->
    <div class="modal fade" id="cancelOrderModal" tabindex="-1" role="dialog" aria-labelledby="cancelOrderModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelOrderModalLabel">Offer List</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="orderStatusForm" action="productoffer" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="id" id="categoryIdForOffer">
                        <div class="form-group">
                            <label for="orderStatus">Order Status:</label>
                            <select name="offerId" id="offer" class="form-control">
                                <% offers.forEach((offer)=>{ %>
                                    <option value="<%=offer._id  %>">
                                        <%=offer.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" form="orderStatusForm" class="btn btn-danger">Add offer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Modal for apply offer end -->
    <!-- remove offer modal -->
    <div class="modal fade" id="cancelOffer" tabindex="-1" role="dialog" aria-labelledby="cancelOrderModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelOrderModalLabel">You want to remove the offer</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="orderStatusForm1" action="productofrrm" method="post">
                    <div class="modal-body1">
                        <input type="hidden" name="id" id="categoryId1">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                        <button type="submit" form="orderStatusForm1" class="btn btn-danger">Yes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- remove offer modal end -->
    <!--  -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to unlist this product?
                </div>
                <div class="modal-footer">
                    <a href="/admin/unlistprdt?id=<%= prdts[i]._id %>" class="btn btn-danger">Yes</a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

