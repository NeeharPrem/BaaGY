             <div class="container mt-4">
                <h2>Users List</h2>
                <div class="table-wrapper">
                    <div class="table-responsive">
                        <% if(user.length>0
                        ) {%>
                            <table id="userlist" class="display table table-striped table-hover" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Mobile Number</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let i = 0; i < user.length; i++) { %>
                                    <tr>
                                        <td><%= i + 1 %></td>
                                        <td><%= user[i].name %></td>
                                        <td><%= user[i].email %></td>
                                        <td><%= user[i].mobile %></td>
                                        <td>
                                            <% if (user[i].blocked === false) { %>
                                            <a href="/admin/blockUser?id=<%= user[i]._id %>" class="btn btn-danger"
                                                onclick="alert('Do you want to Block the user')">Block</a>
                                            <% } else { %>
                                            <a href="/admin/blockUser?id=<%= user[i]._id %>" class="btn btn-success">unblock</a>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                    </div>
                        <%}else{%>
                            <h1 class="text-center">No users found</h1>
                        <%}%>
                </div>
            </div>
