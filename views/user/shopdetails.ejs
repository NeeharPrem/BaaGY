                                    </div>
                                <% } else { %>
                                    <form action="/loadcart" method="get">
                                        <div>
                                            <div class="form-group">
                                                <button type="submit" id="submitButton" class="btn btn-dark">Go to cart</button>
                                            </div>
                                        </div>
                                    </form>
