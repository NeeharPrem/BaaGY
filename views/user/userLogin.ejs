<%- include('../layout/header.ejs') -%>
  <div class="form">
    <h2 style="text-align:center">Login</h2>
    <p style="text-align:center;">Please Login Here.</p>
    <%if(status !=='undefined' ) {%>
      <h5 class="text-center text-dark">
        <%= message %>
      </h5>
      <%}%>
        <%if(status !=='undefined' ) {%>
          <h5 class="text-center text-dark">
            <%= blocked %>
          </h5>
          <%}%>
            <div>
              <div><span class="span-text" id="submit-error" style="color: #db1d1d"></span></div>
            </div>
            <form method="post" action="loggingin">
              <div class="form-group">
                <input class="form-control" name="email" id="email1" placeholder="Email" onchange="validateEmail()">
                <span class="span-text" id="emailError" style="color: #db1d1d"></span>
              </div>
              <div class="form-group">
                <input type="password" name="password" class="form-control" id="pass1" placeholder="Password">
                <span class="span-text" id="passError" style="color: #db1d1d"></span>
              </div>
              <div class="d-flex justify-content-space-between">
                <div class="form-group">
                  <button type="submit" id="submitButton" class="btn btn-warning"
                    onclick="return validateForm()">Login</button>
                </div>
                <div class="form-group">
                  <a href="/resetpass">Forget Password</a>
                </div>
              </div>
              <p style="text-align:center" class="signuptext">Create an account?<a href="/signup">
                  Signup</a>.</p>
            </form>
  </div>
  <script src="/js/loginverify.js"></script>
  <%- include('../layout/footer.ejs') -%>
</body>
</html>