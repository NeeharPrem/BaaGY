<%- include('../layout/header.ejs') -%>

    <!-- Shop Section Begin -->
    <section style="background-color: #eee;">
        <div class="container py-5">
          <div class="row">
            <div class="col">
              <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                <ol class="breadcrumb mb-0">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/profile">User Profile</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                </ol>
              </nav>
              <%if(status !=='undefined') {%>
                <h5 class="text-center text-dark"><%= message %></h5>
            <%}%>
            </div>
          </div>
      
          <div class="row">
            <div class="col-lg-4">
              <div class="card mb-4 mb-lg-0">
                <div class="card-body p-0">
                  <ul class="list-group list-group-flush rounded-3">
                    <a href="/profile"><li class="list-group-item d-flex justify-content-between align-items-center p-3">
                        <i class="fa fa-tachometer fa-lg text-warning"></i>
                        <p class="mb-0">Dashboard</p>
                      </li></a>
                      <a href="/editprofile"><li class="list-group-item d-flex justify-content-between align-items-center p-3">
                        <i class="fa fa-pencil fa-lg text-danger" style="color: #333333;"></i>
                        <p class="mb-0">Edit Profile</p>
                      </li></a>
                    <li class="active list-group-item d-flex justify-content-between align-items-center p-3">
                      <i class="fa fa-key fa-lg" style="color: #55acee;"></i>
                      <p class="mb-0">Change password</p>
                    </li>
                    <a href="/address"><li class="list-group-item d-flex justify-content-between align-items-center p-3">
                        <i class="fa fa-address-card-o fa-lg" style="color: #ac2bac;"></i>
                        <p class="mb-0">Address</p>
                      </li></a>
                    <a href="/orders"><li class="list-group-item d-flex justify-content-between align-items-center p-3">
                      <i class="fa fa-credit-card-alt fa-lg" style="color: #3b5998;"></i>
                      <p class="mb-0">Order</p>
                    </li>
                  <a href="/wallet">
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                      <i class="fa-solid fa-wallet fa-lg" style="color: #3b5998;"></i>
                      <p class="mb-0">Wallet Balance : â‚¹ <%= user.wallet %>
                      </p>
                    </li>
                  </a></a>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-lg-8">
              <div class="card mb-4">
                <form action="passupdate" method="post">
                    <div class="card-body">
                        <div class="row">
                          <div class="col-sm-3">
                            <p class="mb-0">Old Password</p>
                          </div>
                          <div class="col-sm-9">
                            <input style="border: 0px;" type="password" name="oldpass" class="form-control" id="oldpass">
                          </div>
                        </div>
                        <hr>
                        <div class="row">
                          <div class="col-sm-3">
                            <p class="mb-0">New Password</p>
                          </div>
                          <div class="col-sm-9">
                            <input style="border: 0 !important; outline: white" type="password" name="newpass" class="form-control" id="newpass">
                          </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                              <p class="mb-0">Confirm Password</p>
                            </div>
                            <div class="col-sm-9">
                              <input style="border: 0 !important; outline: white" type="password" name="confirmpass" class="form-control" id="confirmpass">
                              <span class="span-text" id="passError" style="color: #db1d1d"></span>
                            </div>
                          </div>
                          <hr>
                        <div class="row justify-content-center">
                          <div class="col-sm-9 text-center">
                            <span class="span-text" id="submit-error" style="color: #db1d1d"></span>
                            <button type="submit" id="submitButton" class="btn btn-warning" onclick="return validateForm()" >SUBMIT</button>
                          </div>
                        </div>
                      </div>
                </form>
              </div>
              <div class="row">
              <!--  -->
              </div>
            </div>
          </div>
        </div>
      </section>
    <!-- Shop Section End -->

<%-include('../layout/footer.ejs')-%>

    <!-- Include Bootstrap and jQuery libraries here -->
    <script src="/js/editpass.js"></script>
    <!-- Js Plugins -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.nice-select.min.js"></script>
    <script src="/js/jquery.nicescroll.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/jquery.countdown.min.js"></script>
    <script src="/js/jquery.slicknav.js"></script>
    <script src="/js/mixitup.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>