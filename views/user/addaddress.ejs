<%- include('../layout/header.ejs') -%>
<%console.log(user)%>
    <!-- Shop Section Begin -->
    <section style="background-color: #eee;">
        <div class="container py-5">
          <div class="row">
            <div class="col">
              <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                <ol class="breadcrumb mb-0">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/profile">User Profile</a></li>
                  <li class="breadcrumb-item"><a href="/address">Address</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Add address</li>
                </ol>
              </nav>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <div class="address">
              <div>
                <p style="color: black; font-weight: bold; font-size: 18px; margin-top: 20px;">Add a New Address</p>
                <div class="p-3" style="margin-top: 1.5rem; background-color: rgb(255, 255, 255); box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px; border-radius: 12px;">
                    <form action="addaddress" method="post">
                        <div class="form-group pt-3">
                            <input type="text" name="name" class="form-control" id="name" placeholder="Full Name" onchange="validatename()">
                            <span class="span-text" id="nameError" style="color: #db1d1d"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="mobile" class="form-control" id="mobile" placeholder="Mobile number" onchange="validatename()">
                            <span class="span-text" id="nameError" style="color: #db1d1d"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" class="form-control" id="address" placeholder="Address" onchange="validatename()">
                            <span class="span-text" id="nameError" style="color: #db1d1d"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="locality" class="form-control" id="location" placeholder="Locality/Town" onchange="validatename()">
                            <span class="span-text" id="nameError" style="color: #db1d1d"></span>
                        </div>
                        <div class="form-group">
                            <input type="number" name="pincode" class="form-control" id="pincode" placeholder="Pincode" onchange="validatename()">
                            <span class="span-text" id="nameError" style="color: #db1d1d"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="district" class="form-control" id="district" placeholder="District" onchange="validatename()">
                            <span class="span-text" id="nameError" style="color: #db1d1d"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="state" class="form-control" id="state" placeholder="State" onchange="validatename()">
                            <span class="span-text" id="nameError" style="color: #db1d1d"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="form-group">
                                <button type="submit" id="submitButton" class="btn btn-warning" onclick="return validateForm()">Add address</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            </div>
        </div>        
        </div>
      </section>
    <!-- Shop Section End -->

