            border-bottom: solid 4px #28a745;
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.1);
        }

        .message-box i {
            font-size: 55px;
            color: #28a745;
        }

        .message-box h2 {
            margin-bottom: 12px;
            font-size: 30px;
            font-weight: 500;
            line-height: 1.2;
            margin-top: 10px;
        }

        .message-box p {
            margin-bottom: 0px;
            font-size: 18px;
            color: #495057;
            font-weight: 500;
        }
        .flex-container {

    display: flex;
    
