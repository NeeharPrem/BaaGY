<%- include('../layout/header.ejs') -%>
    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="row">

                <div class="col-md-3"></div>
                <div class="col-md-6 col-sm-12">
                    <div class="">
                        <div>
                            <%if(status !=='undefined' ) {%>
                                <h5 class="text-center text-dark">
                                    <%=message %>
                                </h5>
                                <%}%>
                            <div class="text-center">
                                <p class="bg-light p-3"
                                    style="color: black; font-weight: bold; font-size: 18px; margin-top: 20px; border-radius: 10px;">
                                    CONTACT US</p>
                            </div>
                            <div class="p-3"
                                style="margin-top: 1.5rem; background-color: rgb(255, 255, 255); box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;">
                                <form action="contactus" method="post">
                                    <div class="form-group pt-3">
                                        <label>Name</label>
                                        <input type="text" name="name" class="form-control" id="name" onchange="validatename()" placeholder="Enter your name">
                                        <span class="span-text" id="nameError" style="color: #db1d1d"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" name="email" class="form-control" id="email"
                                       placeholder="Enter email" >
                                        <span class="span-text" id="nameError" style="color: #db1d1d"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Subject</label>
                                        <input type="text" name="subject" class="form-control" id="subject"
                                            placeholder="Enter subject" >
                                        <span class="span-text" id="nameError" style="color: #db1d1d"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="message">Message</label>
                                        <textarea type="message" id="message" class="form-control form-control-lg rounded-0"
                                            placeholder="Enter your message" name="message" required></textarea>
                                    </div>
                                    <div class="text-center m-3">
                                        <button type="submit" id="submitButton" class="btn btn-warning mx-auto w-75"
                                            >SEND</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Js Plugins -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.nice-select.min.js"></script>
    <script src="/js/jquery.nicescroll.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/jquery.countdown.min.js"></script>
    <script src="/js/jquery.slicknav.js"></script>
    <script src="/js/mixitup.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>

    <!-- curosal js -->
    <%-include('../layout/footer.ejs')-%>