<%- include('../layout/header.ejs') -%>
    <!-- Product Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Wishlist</h4>
                        <div class="breadcrumb__links">
                            <!-- <a href="/">Home</a>
                            <a href="/shop">Shop</a> -->
                            <!-- <span>Wishlist</span> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad d-flex justify-content-center align-items-center" style="background-color: #ffffff;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="shopping__cart__table" style="border: none; background-color: #ffffff;">
                        <% if(product.length>0){ %>
                        <table id="wishlistTable">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Stock</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0;i< product.length;i++){ %>
                                    <% if (product[i].quantity==0) { %>
                                        <tr>
                                            <td class="product__cart__item">
                                                <div class="product__cart__item__pic">
                                                    <img style="width: 90px; height:90px" src="img/<%= product[i].img[0] %>" alt="img">
                                                </div>
                                                <div class="product__cart__item__text">
                                                    <h5><%= product[i].name %></h5>
                                                    <h6>₹ <%= product[i].price %></h6>
                                                </div>
                                            </td>
                                            <td class="quantity__item">
                                                <p style="color: #ff0000;">Out Of Stock</p>
                                            </td>
                                            <td class="cart__close">
                                                <form action="outWishlist?id=<%=product[i]._id%>" method="post">
                                                    <button type="submit" class="btn btn-link">
                                                        <i class="fa fa-close"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } else { %>
                                        <tr data-product-id="<%= product[0]._id %>">
                                            <td class="product__cart__item">
                                                <div class="product__cart__item__pic">
                                                    <img style="width: 90px; height:90px" src="img/<%= product[i].img[0] %>" alt="img">
                                                </div>
                                                <div class="product__cart__item__text">
                                                    <h5><%= product[i].name %></h5>
                                                    <h6>₹ <%= product[i].price %></h6>
                                                </div>
                                            </td>
                                            <td class="quantity__item">
                                                <p style="color: #0d8d02;">In Stock</p>
                                            </td>
                                            <td class="cart__close">
                                                <form action="outWishlist?id=<%=product[i]._id%>" method="post">
                                                    <button type="submit" class="btn btn-link">
                                                        <i class="fa fa-close"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% } %>
                            </tbody>
                            <%}else{%>
                                <div class="flex justify-content-center text-center">
                                    <div class="align-items-center">
                                        <h1>WISHLIST IS EMPTY</h1>
                                    </div>
                                    <!-- <div class="continue__btn" style="margin-top: 2rem;">
                                        <a href="/shop">Start Shopping</a>
                                    </div> -->
                                </div>
                                <%}%>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
<%- include('../layout/footer.ejs') -%>

    <!-- Js Plugins -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.nice-select.min.js"></script>
    <script src="/js/jquery.nicescroll.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/jquery.countdown.min.js"></script>
    <script src="/js/jquery.slicknav.js"></script>
    <script src="/js/mixitup.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>

    <!-- load the product page -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
    const wishlistTable = document.getElementById("wishlistTable");
    
    wishlistTable.addEventListener("click", function (event) {
        const target = event.target;
        const productRow = target.closest("tr[data-product-id]");
        
        if (productRow) {
            const productId = productRow.getAttribute("data-product-id");
            window.location = "/getproduct?id=" + productId;
        }
    });
});
    </script>